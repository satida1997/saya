  <script>
    const SHEET_URL = 'https://script.google.com/macros/s/AKfycbyRs3UH0y4RfDX-lC4FwAhs1CHjTOL8xs1gI9lCACzTVO61he_sDQ-Y1U5py66SD2J02w/exec';
    const list = document.getElementById('transaction-list');
    const chartCtx = document.getElementById('expense-chart').getContext('2d');

    let transactions = [];

    async function fetchTransactions() {
      try {
        const res = await fetch(SHEET_URL);
        transactions = await res.json();
        updateList();
        updateChart();
      } catch (err) {
        console.error('‡∏î‡∏∂‡∏á‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏•‡πâ‡∏°‡πÄ‡∏´‡∏•‡∏ß', err);
        alert('‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡πÇ‡∏´‡∏•‡∏î‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÑ‡∏î‡πâ');
      }
    }

    function updateList() {
      list.innerHTML = '';
      transactions.forEach(({ description, amount }) => {
        const li = document.createElement('li');
        li.className = 'flex justify-between bg-pink-100 bg-opacity-60 p-2 rounded';
        li.innerHTML = `
          <span>${description}</span>
          <span class="${amount >= 0 ? 'text-green-600' : 'text-red-600'}">${amount.toLocaleString()} ‡∏ö‡∏≤‡∏ó</span>
        `;
        list.appendChild(li);
      });
    }

    function updateChart() {
      const income = transactions.filter(t => t.amount >= 0).reduce((a, b) => a + b.amount, 0);
      const expense = Math.abs(transactions.filter(t => t.amount < 0).reduce((a, b) => a + b.amount, 0));

      new Chart(chartCtx, {
        type: 'pie',
        data: {
          labels: ['‡∏£‡∏≤‡∏¢‡∏£‡∏±‡∏ö', '‡∏£‡∏≤‡∏¢‡∏à‡πà‡∏≤‡∏¢'],
          datasets: [{
            label: '‡∏£‡∏ß‡∏°‡∏£‡∏≤‡∏¢‡∏£‡∏±‡∏ö/‡∏£‡∏≤‡∏¢‡∏à‡πà‡∏≤‡∏¢',
            data: [income, expense],
            backgroundColor: ['#bef264', '#fb7185'],
          }]
        },
        options: {
          responsive: true,
          plugins: {
            legend: {
              position: 'bottom',
            }
          }
        }
      });
    }

    fetchTransactions();
  </script>
